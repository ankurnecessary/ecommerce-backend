{
  "name": "ecommerce-backend",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm watch-openapi\" \"pnpm dev:server\"",
    "dev:server": "tsx watch src/index.ts",
    "dev:docker": "sed -i \"s/^NODE_VERSION=.*/NODE_VERSION=$(cat .nvmrc)/\" .env && pnpm openapi && docker compose up --build",
    "build": "tsc",
    "start": "node dist/index.js",
    "build:start": "tsc && node ./dist/index.js",
    "test": "echo \"Error: no test specified\"",
    "prepare": "husky",
    "lint": "eslint \"src/**/*.{js,ts}\"",
    "prod:create": "sh ./shell-scripts/prod-create.sh",
    "prod:update": "sh ./shell-scripts/prod-update.sh",
    "openapi": "tsx scripts/swagger/generate-openapi",
    "validate-openapi": "npx @redocly/cli lint openapi.yaml",
    "watch-openapi": "nodemon --watch src --ext ts,json --exec pnpm openapi",
    "static-api-doc": "npx @redocly/cli build-docs openapi.yaml -o docs/index.html",
    "reset:db": "prisma migrate reset && pnpm prisma db seed"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@redocly/cli": "^2.7.0",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.11",
    "@types/pg": "^8.16.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "ajv": "^8.17.1",
    "concurrently": "^9.2.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^6.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "nodemon": "^3.1.10",
    "prettier": "^3.4.2",
    "prisma": "^7.1.0",
    "resolve": "^1.22.10",
    "swagger-jsdoc": "^6.2.8",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "yaml": "^2.8.1"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "serverless-http": "^3.2.0",
    "swagger-ui-express": "^5.0.1"
  }
}
