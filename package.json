{
  "name": "ecommerce-backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"pnpm watch-openapi\" \"pnpm dev-server\"",
    "dev-server": "ts-node-dev --respawn src/index.ts",
    "dev:transpile": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:docker": "pnpm openapi && docker compose up --build",
    "build": "tsc && copyfiles -u 1 src/**/*.graphql dist/",
    "start": "node dist/index.js",
    "build:start": "tsc && node ./dist/index.js",
    "test": "echo \"Error: no test specified\"",
    "prepare": "husky",
    "lint": "eslint \"src/**/*.{js,ts}\"",
    "prod:create": "sh ./shell-scripts/prod-create.sh",
    "prod:update": "sh ./shell-scripts/prod-update.sh",
    "openapi": "ts-node scripts/swagger/generate-openapi",
    "validate-openapi": "npx @redocly/cli lint openapi.yaml",
    "watch-openapi": "nodemon --watch src --ext ts,json --exec pnpm openapi",
    "static-api-doc": "npx @redocly/cli build-docs openapi.yaml -o docs/index.html",
    "codegen": "graphql-codegen --config codegen.ts && pnpm prisma generate --schema=./prisma/schema.prisma"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@graphql-codegen/cli": "^6.1.0",
    "@graphql-codegen/typescript": "^5.0.5",
    "@graphql-codegen/typescript-resolvers": "^5.1.3",
    "@redocly/cli": "^2.7.0",
    "@types/bcrypt": "^6.0.0",
    "@types/body-parser": "^1.19.5",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.11",
    "@types/swagger-jsdoc": "^6.0.4",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "ajv": "^8.17.1",
    "concurrently": "^9.2.1",
    "copyfiles": "^2.4.1",
    "dotenv": "^17.2.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^6.4.0",
    "graphql": "^16.12.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "nodemon": "^3.1.10",
    "prettier": "^3.4.2",
    "prisma": "^6.19.0",
    "resolve": "^1.22.10",
    "swagger-jsdoc": "^6.2.8",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "5.3.3",
    "yaml": "^2.8.1"
  },
  "dependencies": {
    "@apollo/server": "^5.1.0",
    "@as-integrations/express5": "^1.1.2",
    "@graphql-tools/schema": "^10.0.29",
    "@prisma/client": "^6.19.0",
    "bcrypt": "^6.0.0",
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "graphql-import-node": "^0.0.5",
    "jsonwebtoken": "^9.0.2",
    "serverless-http": "^3.2.0",
    "swagger-ui-express": "^5.0.1"
  }
}
